# Production environment variables for Backend (Render)
# Set these in your Render dashboard

# Configuration serveur
PORT=10000
NODE_ENV=production

# MongoDB Atlas (cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eventhub?retryWrites=true&w=majority

# JWT Secrets (generate secure 32+ character secrets)
# You can generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# CORS - Set to your Vercel/Netlify frontend URL
FRONTEND_URL=https://your-frontend-name.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
