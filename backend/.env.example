# Configuration serveur
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/eventhub

# JWT Secrets (générer des clés sécurisées en production)
JWT_SECRET=votre_secret_jwt_super_securise_minimum_32_caracteres
JWT_REFRESH_SECRET=votre_refresh_secret_jwt_super_securise_minimum_32_caracteres
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
